             }


             var getdata = "<tr class= 'row_" + index + "'>" +
                 "<td style='text-align: left; padding-left: 2em;'> " + rowData.Process + "</td>" +
                 "<td>" + rowData.SDP + "</td>" +
                 "<td>" + rowData.SubCon + "</td>" +
                 "<td>" + rowData.Remarks + "</td>" +
                 buttons +
                 "</tr>";
             SetData.append(getdata);
         });
     }

