<div id="paginationV2" class="pagination-container"></div>


<script type="text/javascript">
    let requestData = [];
    let completeData = [];
    let currentPage = 1;
    const rowsPerPage = 10;

    let today = new Date();
    let dd = String(today.getDate()).padStart(2, '0');
    let mm = String(today.getMonth() + 1).padStart(2, '0');
    let yyyy = today.getFullYear();
    let todayStr = `${yyyy}-${mm}-${dd}`;
    document.getElementById("TargetDate").setAttribute("min", todayStr);

    const addforms = document.getElementById("addnewform");

    // ========================== LOAD REQUEST DATA ==============================
    const RequesDataList = async () => {
        let res = await FetchAuthenticate('@Url.Action("GetAllRequestList", "Hydro")', {});
        if (res && res.Success) {
            requestData = res.Data;
            //requestData = res.Data.filter(item => item.RequestStatus === "ONGOING");
            //completeData = res.Data.filter(item => item.RequestStatus === "COMPLETED");
            $("#RequestCount").text(requestData.length);
            renderFilteredData();
        }
    };

    // ========================== RENDER TABLE + PAGINATION ======================
    function renderFilteredData() {
        let TableData = $("#chamberOrdersTableBody");
        TableData.empty();

        const selectedType = $("#categoryFilter").val();
        const selectedStatus = $("#stockStatusFilter").val();
        const searchQuery = $("#inventorySearch").val().toLowerCase();
        const start = $("#startDate").val();
        const end = $("#endDate").val();

        // Apply filters
        let filtered = requestData.filter(row => {
            if (selectedType !== "all" && row.ChamberName !== selectedType) return false;
            if (selectedStatus !== "all" && row.RequestStatus !== selectedStatus) return false;

            if (start || end) {
                let parts = row.OrderDate.split("/");
                let rowDate = new Date(parts[2], parts[0] - 1, parts[1]);
                if (start && rowDate < new Date(start)) return false;
                if (end && rowDate > new Date(end)) return false;
            }

            if (searchQuery && !(
                (row.OrderID && row.OrderID.toString().includes(searchQuery)) ||
                (row.ChamberName && row.ChamberName.toLowerCase().includes(searchQuery)) ||
                (row.PIC && row.PIC.toLowerCase().includes(searchQuery))
            )) return false;

            return true;
        });

        $("#RequestCount").text(filtered.length);

        if (filtered.length === 0) {
            TableData.append(`<tr><td colspan="8" style="text-align:center; color:#888;">No matching records found</td></tr>`);
            $("#paginationV2").html("");
            return;
        }

        // Pagination logic
        const totalPages = Math.ceil(filtered.length / rowsPerPage);
        if (currentPage > totalPages) currentPage = 1;

        const startIdx = (currentPage - 1) * rowsPerPage;
        const paginatedData = filtered.slice(startIdx, startIdx + rowsPerPage);

        // Render rows
        $.each(paginatedData, function (index, row) {
            let percent = parseFloat(row.CompletionPercent) || 0;
            let displayPercent = Math.round(percent);
            let barColor = "linear-gradient(90deg, #e74c3c, #c0392b)";
            if (percent >= 70) barColor = "linear-gradient(90deg, #2ecc71, #27ae60)";
            else if (percent >= 40) barColor = "linear-gradient(90deg, #f1c40f, #f39c12)";

            const loadData = `
              <tr class='RequestRow' id='Details_${row.OrderID}'>
                  <td><strong>${row.OrderID ?? "-"}</strong></td>
                  <td>${row.ChamberName ?? "-"}</td>
                  <td>${row.ChambersOrdered ?? 0} unit(s)</td>
                  <td>${row.OrderDate ?? "-"}</td>
                  <td>${row.TargetDate ?? "-"}</td>
                  <td>${row.PIC ?? "-"}</td>
                  <td style='text-align:center; display: flex; justify-content: center; flex-direction: column; align-items: center;'>
                      <div class="progress-bar-container">
                          <div class="progress-bar"></div>
                      </div>
                      <span style="font-size:.75rem; margin-top:4px;">Completion rate: ${displayPercent}%</span>
                  </td>
                  <td>${row.RequestStatus ?? "-"}</td>
              </tr>
            `;
            TableData.append(loadData);

            const $bar = TableData.find(".progress-bar").last();
            $bar.css("background", barColor);
            setTimeout(() => $bar.css("width", `${percent}%`), 50);
        });

        // Render pagination controls
        renderPagination(totalPages);
    }

    // ========================== PAGINATION CONTROLS ============================
    function renderPagination(totalPages) {
        let pagination = $("#paginationV2");
        pagination.empty();

        if (totalPages <= 1) return;

        let html = `
            <button class="page-btn" data-page="${currentPage - 1}" ${currentPage === 1 ? "disabled" : ""}>Prev</button>
        `;

        for (let i = 1; i <= totalPages; i++) {
            html += `<button class="page-btn ${i === currentPage ? "active" : ""}" data-page="${i}">${i}</button>`;
        }

        html += `
            <button class="page-btn" data-page="${currentPage + 1}" ${currentPage === totalPages ? "disabled" : ""}>Next</button>
        `;

        pagination.html(html);
    }

    // Pagination click handler
    $(document).on("click", ".page-btn", function () {
        const newPage = parseInt($(this).data("page"));
        if (!isNaN(newPage)) {
            currentPage = newPage;
            renderFilteredData();
        }
    });

    // ========================== FILTER EVENTS ================================
    $("#categoryFilter, #stockStatusFilter, #startDate, #endDate").on("change", function () {
        currentPage = 1;
        renderFilteredData();
    });

    $("#inventorySearch").on("keyup", function () {
        currentPage = 1;
        renderFilteredData();
    });

    // ========================== ROW CLICK EVENT ==============================
    $(document).on('click', '.RequestRow', function (e) {
        e.stopPropagation();
        const rowId = $(this).attr('id').split('_')[1];
        window.location.href = `/Hydroponics/Hydro/OrderpageDetails?orderID=${rowId}`;
    });

    // ========================== ADD REQUEST ==============================
    const GetChamberDatalist = async () => {
        let res = await FetchAuthenticate('@Url.Action("GetChamberList", "Hydro")', {});
        if (res && res.Success) {
            $.each(res.Data, function (index, row) {
                $("#ChamberID").append(`<option value='${row.ChamberID}'>${row.ChamberName}</option>`);
            });
        }
    };

    $("#Showadd").on('click', function (e) {
        e.preventDefault();
        $("#AddRequestModal").modal("show");
    });

    addforms.addEventListener('submit', async function (e) {
        e.preventDefault();
        let formdata = new FormData(e.target);
        let res = await postData('@Url.Action("NewAddRequestData", "Hydro")', formdata);
        if (res && res.Success) {
            RequesDataList();
            e.target.reset();
            $("#AddRequestModal").modal("hide");
        }
    });

    // ========================== INITIAL LOAD ==============================
    const LoadPageData = async () => {
        try {
            await Promise.all([RequesDataList(), GetChamberDatalist()]);
        } catch (error) {
            console.error("Failed to load page data:", error);
        }
    };

    $(document).ready(() => {
        LoadPageData();
    });
</script>
