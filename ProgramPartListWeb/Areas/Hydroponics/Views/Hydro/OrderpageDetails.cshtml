     }


     // Action functions for allocated parts
     function removePart(partNumber) {
         delete allocatedParts[partNumber];

         updateAllocatedTable();
         updateRequiredTableStyles();

         const loadData = `<tr>
           <td colspan='4'>
               🔍 No Allocated Data
           </td>
       </tr>`;

         TableDisplay.empty();
         TableDisplay.append(loadData);
     }

    function incrementPart(partnum) {
        const partData = requestData.find(p => p.PartNo === partnum);
         if (!partData) return;

         const remain = partData.RemainQty;
         const available = partData.CurrentQty;
         const allocated = allocatedParts[partnum] || 0;
         if (allocated < remain && allocated < available) {
             allocatedParts[partnum]++;

             updateAllocatedTable();
             updateRequiredTableStyles();
             //updateCounts();
             //updateProgress();
         } else {
             alert(`Cannot allocate more of ${partData.PartNo}. Maximum: ${Math.min(remain, available)}`);
         }
     }

    function decrementPart(partnum) {
        if (allocatedParts[partnum] > 1) {
            allocatedParts[partnum]--;
             updateAllocatedTable();
             updateRequiredTableStyles();
             //updateCounts();
             //updateProgress();
         } else {
            removePart(partnum);
         }
     }
     // Get lengths for all orders
     function getAllAllocationLengths() {
         let lengths = {};

         for (let orderID in allocatedParts) {
             if (allocatedParts.hasOwnProperty(orderID)) {
                 lengths[orderID] = allocatedParts[orderID].length;
             }
         }

         return lengths;
     }


     async function completeOrder() {
         const allocations = getAllocatedPartsFromTable();

         let result = await fetch('@Url.Action("UpdatesRequestMaterialsV2", "Hydro")', {
             method: "POST",
             headers: { "Content-Type": "application/json; charset=utf-8" },
             body: JSON.stringify(allocations)
         });

         let res = await result.json();
         if (res && res.Success) {
             Swal.fire({
                 title: "Success",
                 text: res.Message,
                 icon: "success",
                 showConfirmButton: false,
                 timer: 1500
             }).then(() => {
                 allocatedParts = {};
                 populateRequiredTable();
                 RequestMain();
                 updateAllocatedTable();

                 const loadData = `<tr>
                    <td colspan='4'>
                        🔍 No Allocated Data
                    </td>
                </tr>`;

                 TableDisplay.empty();
                 TableDisplay.append(loadData);
             });
         }

    }

    // Generic table search function
    function searchTable(inputId, tableId, infoId) {
        const input = document.getElementById(inputId);
        const filter = input.value.toLowerCase();
        const table = document.getElementById(tableId);
        const rows = table.getElementsByTagName("tr");
        let visibleCount = 0;

        for (let i = 0; i < rows.length; i++) {
            const cells = rows[i].getElementsByTagName("td");
            if (cells.length > 0) {
                const rowText = rows[i].innerText.toLowerCase();
                if (rowText.includes(filter)) {
                    rows[i].style.display = "";
                    visibleCount++;
                } else {
                    rows[i].style.display = "none";
                }
            }
        }

        // Update search info
        const info = document.getElementById(infoId);
        if (filter === "") {
            info.textContent = "Showing all items";
        } else {
            info.textContent = `Showing ${visibleCount} matching result(s)`;
        }
    }

    // Attach listeners for Required search
    document.getElementById("requiredSearch").addEventListener("keyup", function () {
        searchTable("requiredSearch", "requiredTable", "requiredSearchInfo");
    });

    // Attach listeners for Allocated search
    document.getElementById("allocatedSearch").addEventListener("keyup", function () {
        searchTable("allocatedSearch", "allocatedTable", "allocatedSearchInfo");
    });




    document.getElementById("autoAllocateBtn").addEventListener("click", function () {
        const rows = document.querySelectorAll("#requiredTable tbody tr");

        rows.forEach(row => {
            const partNumber = row.getAttribute('data-part');
            const required = parseFloat(row.getAttribute('data-required'));
            const available = parseFloat(row.getAttribute('data-available'));
            const remainTable = parseFloat(row.getAttribute('data-remain'));

            if (available > 0 && remainTable > 0) {
                allocatePart(partNumber, required, available, remainTable);
            }
        });






    });
    function roundToStep(val) {
        return Math.round(val * 100) / 100;
    }

    function getAllocatedPartsFromTable() {
        const rows = document.querySelectorAll('#allocatedTable tbody tr');
        let result = [];

        rows.forEach(row => {
            const cells = row.querySelectorAll('td');
            // ✅ Ensure at least 3 cells exist
            if (cells.length >= 3) {
                const PartNo = cells[1].textContent.trim() || '';
                const allocated = parseFloat(cells[2].textContent.trim()) || 0;

                result.push({
                    OrderID: ID,
                    PartNo: PartNo,
                    allocated: allocated
                });
            }
        });

        return result;
    }

