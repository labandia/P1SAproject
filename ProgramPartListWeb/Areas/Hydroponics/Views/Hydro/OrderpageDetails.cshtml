    // Handle clicks on the required table
    function handleRequiredTableClick(e) {
        const row = e.target.closest('tr');
        if (!row) return;

        const partNumber = row.getAttribute('data-part');
        const required = parseFloat(row.getAttribute('data-required'));
        const available = parseFloat(row.getAttribute('data-available'));
        const remainTable = parseFloat(row.getAttribute('data-remain'));

        // Check if part can be allocated
        if (available === 0) {
            alert(`Part ${partNumber} is out of stock and cannot be allocated.`);
            return;
        }

        allocatePart(partNumber, required, available, remainTable);
    }
    // Allocate a part to the order
    function allocatePart(partNumber, required, available, remainTable) {

        const partData = requestData.find(p => p.PartNo === partNumber);
        if (!partData) return;

        // Initialize if not already allocated
        if (!allocatedParts[partNumber]) {
            allocatedParts[partNumber] = 0;
        }


        // Parse as float (supports decimals like 0.25, 1.5, etc.)
        const requiredQty = parseFloat(required);
        const remainQty = parseFloat(remainTable);
        const availableQty = parseFloat(available);

        // Max allocatable = min(remaining need, available stock)
        const maxAllocatable = Math.min(remainQty, availableQty);
        // Check if we can allocate more
        if (maxAllocatable > 0) {
            allocatedParts[partNumber] = roundToStep(maxAllocatable);
            updateAllocatedTable();
            updateRequiredTableStyles();
            //updateCounts();
            //updateProgress();
        } else {
            alert(`Cannot allocate more of ${partData.PartNo}. Maximum available: ${Math.min(required, available)}`);
        }
    }


    // Update the allocated parts table
    function updateAllocatedTable() {
        // Count only parts with allocation > 0
        let allocatedCount = Object.values(allocatedParts).filter(qty => qty > 0).length;
        $("#Counts").text(`(${allocatedCount})`);

        const tbody = document.querySelector('#allocatedTable tbody');
        tbody.innerHTML = '';

        for (const partNumber in allocatedParts) {
            if (allocatedParts[partNumber] > 0) {
                const partData = requestData.find(p => p.PartNo === partNumber);
                const row = document.createElement('tr');


                row.innerHTML = `
                      <td>0</td>
                     <td style='text-align: left;'>
                        ${partData.PartNo}
                     </td>
                     <td  class="qty-cell">${allocatedParts[partNumber]}</td>
                     <td>
                         <div class="action-buttons">
                             <button class="btn btn-remove" onclick="removePart('${partNumber}')"><i class="fa-regular fa-circle-xmark"></i></button>
                             <button class="btn btn-decrement" onclick="decrementPart('${partNumber}')"><i class="fa-solid fa-minus"></i></button>
                             <button class="btn btn-increment" onclick="incrementPart('${partNumber}')"><i class="fa-solid fa-plus"></i></button>

                         </div>
                     </td>
                 `;

                tbody.appendChild(row);
            }
        }
    }

    // Update styles for the required table based on allocation status
    function updateRequiredTableStyles() {

        const rows = document.querySelectorAll('#requiredTable tbody tr');

        rows.forEach(row => {
            const ID = parseInt(row.getAttribute('data-ID'));
            const partNumber = row.getAttribute('data-part');
            const required = parseInt(row.getAttribute('data-required'));
            const allocated = allocatedParts[ID] || 0;

            // Remove existing status classes
            row.classList.remove('allocated', 'fully-allocated');

            // Add appropriate classes
            if (allocated > 0) {
                if (allocated >= required) {
                    row.classList.add('fully-allocated');
                } else {
                    row.classList.add('allocated');
                }
            }
        });
    }



     // Update the count badges
     function updateCounts() {
