                    break;
                case 3:
                    window.location.href = `/PC/Patrol/ManagerView?Regno=${r}&mode=${m}`;
                    break;
                case 4:
                case 5:
                case 6:
                    window.location.href = `/PC/Patrol/DepartmentApproval?Regno=${r}&mode=${m}`;
                    break;
